@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-container">
    <div class="app">
        <div class="header-actions">
            <h2>[App Name]</h2>
        </div>
        <div class="tab-container">
            <div style="margin-left:-15px;position:absolute;z-index: 10; width: 100%; height: 92%; background-color: rgba(255,255,255,.5);" id="progressIndicator">
                <div class="loadingicon"></div>
            </div>

            <div style="margin-left:-15px;margin-top:-10px;position:absolute;z-index: 10; width: 99%; height: 93%;overflow:auto; background-color: rgba(255,255,255,.8);display: none" id="serverError">
                <div class="row" style="height: 20%;width:100%;overflow: auto;">
                    <div class="col-md-12">
                        <div class="notification error">
                            <div class="icon" onclick="closeError()"></div>
                            <div id="serverErrorMessage" class="message">
                                An error occurred on the server.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tabs">
                <a data-tab-id="infoTab" data-toggle="tab" class="button tab active">Info</a>
            </div>
            <div class="tab-view">

                <div id="infoTab" class="tab-section">
                    @{Html.RenderPartial("_info");}
                </div>

            </div>
            <div class="branding-text">Developed by Volusion, Inc. All rights reserved.</div>
            @Html.Hidden("cookieToken", (Object)ViewBag.cookieToken)
            @Html.Hidden("formToken", (Object)ViewBag.formToken)
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/Scripts/home.js"></script>
}


